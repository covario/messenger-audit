@page
@model Covario.AuditAdminApp.Pages.IndexModel
@{
    ViewData["Title"] = "Telegram Audit Administration";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>This site is for the configuration and monitoring of Telegram Audit Chats.</p>
</div>
@if (!User.Identity.IsAuthenticated)
{
    <ul>
        @foreach (var claim in User.Claims)
        {
            <li><strong>@claim.Type</strong>: @claim.Value</li>
        }
    </ul>
}
